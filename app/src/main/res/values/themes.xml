<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/default_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editText">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textColorHint">@color/material_color_grey_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">@dimen/_240sdp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@drawable/default_button_text_color_selector</item>
        <item name="android:background">@drawable/default_button_bg_selector</item>
    </style>
</resources>